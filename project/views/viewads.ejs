<!Doctype html>

<html>

<head>
    <title>List of Ads</title>
</head>

<body>    
    <h1>List of Ads</h1>
    <%if(isMember)
    {%>
    <button class="btnAction" id="home" onclick="window.location.href = '/member/index';">
        Back to Home Page
    </button>
    <%}
    else{%>
    <button class="btnAction" id="home" onclick="window.location.href = '/admin/index';">
    Back to Home Page
    </button>    
    <%}%>
    <table>
        <thead>
            <tr>
                <th>Image</th>
                <th>Title </th>
                <th>Description</th>
                <th>Time Created</th>
                <%if(isMember)
                    {
                        %>                  
                <th colspan="3">Actions</th>
                <%}
                else{%>
                <th>Actions</th> 
                <%}%>                       
            </tr>
        </thead>
        <tbody>
            <% if(taskData.length> 0 )
                {
                taskData.forEach(function (data){
                %>
                <tr>
                    <% var imgUrl = "/media/"+data._id+"."+data.image%>
                    <td>
                        <img src=<%=imgUrl%>>
                    </td>
                    <td>
                        <%=data.title%>
                    </td>
                    <td>
                        <%=data.description%>
                    </td>
                    <td>
                        <% var dObj=new Date(data.createdDateTime) 
                        var date=dObj.getDate()+"/"+(dObj.getMonth()+1)+"/"+dObj.getFullYear()+" "+ dObj.getHours()+":"+dObj.getMinutes()+":"+dObj.getSeconds() %>
                            <%=date%>
                    </td>                 
                    <%if(isMember)
                    {
                        %>
                        <td>                        
                            <button class="btnAction" onclick="window.location.href = '/member/editAd/<%=data._id%>/';">
                                Edit Ad
                            </button>
                        </td>
                        <td>                        
                            <button class="btnAction" onclick="window.location.href = '/member/reuploadImg/<%=data._id%>/';">
                               Re-upload Image
                            </button>
                        </td>
                        <td>                        
                            <button class="btnAction" onclick="window.location.href = '/member/deleteAd/<%=data._id%>/';">
                                Delete Ad
                            </button>
                        </td>
                    <%}
                    else{%>

                    
                    <td>                        
                        <button class="btnAction" onclick="window.location.href = '/admin/requestDetailsView/<%=data._id%>/';">
                            Request for more information
                        </button>
                    </td>                   
                <%}%>
                </tr>
                <% }) } %>
        </tbody>
    </table>

</body>

<style>
    table {
      border-collapse: collapse;
      width: 100%;
    }
    
    th, td {
      text-align: left;
      padding: 8px;
    }
    
    tr:nth-child(even){background-color: #f2f2f2}
    
    th {
      background-color: #04AA6D;
      color: white;
    }
    
              
              * { -webkit-box-sizing:border-box; -moz-box-sizing:border-box; -ms-box-sizing:border-box; -o-box-sizing:border-box; box-sizing:border-box; }
              
              html { width: 100%; height:100%; overflow:hidden; }
              
              body { 
                width: 100%;
                height:100%;
                font-family: 'Open Sans', sans-serif;
            
              }
              .form{
                  font-size: larger;
                  width: 250px;
                  height: 300px;
                  background: linear-gradient(to bottom, #33cccc 0%, #ff9933 100%);
                  border: 1px solid;
                padding: 10px;
                box-shadow: 5px 10px #363305;
              }
              div{
                  padding: 10px;
              }
              a:link, a:visited {
                background-color: #36f436;
                color: white;
                padding: 14px 25px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
              }
              
              a:hover, a:active {
                background-color: rgb(102, 228, 140);
              }
                 
    </style>
    html,body{overflow-y: scroll; }
    img{
        width: 194px;
        height: 125px;
        margin-left: -57px
    }

</html>