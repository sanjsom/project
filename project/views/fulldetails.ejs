<!Doctype html>

<html>

<head>
    <title>Details</title>
</head>

<body>    
    <h1>Full Details</h1>
    <button class="btnAction" id="home" onclick="window.location.href = '/admin/index';">
        Back to Home Page
    </button>    
    
    
    <div class="card">
        <p style="font-weight: bold;">SELLER PERSONAL INFORMATION</p> 
        <% if(memberData.length> 0 )
                {
                    memberData.forEach(function (data){
                %>      
        <p><strong>NAME: </strong><%=data.name%></p>
        <p><strong>EMAIL: </strong><%=data.email%></p>
        <p><strong>DOB: </strong><%=data.dob%></p>
        <p><strong>MOBILE: </strong><%=data.mobile%></p>
        <p><strong>AGE: </strong><%=data.age%></p>
       
        
        <% }) } %>
      </div>


    <table style="background-color: aqua;">
        <thead>
            <tr>
                <th>Image</th>
                <th>Title </th>
                <th>Description</th>
                <th>Price</th>                                      
            </tr>
        </thead>
        <tbody>
            <% if(adData.length> 0 )
                {
                    adData.forEach(function (data){
                %>
                <tr>
                    <% var imgUrl = "/media/"+data._id+"."+data.image%>
                    <td>
                        <img src=<%=imgUrl%>>
                    </td>                
                    <td>
                        <%=data.title%>
                    </td>
                    <td>
                        <%=data.description%>
                    </td>
                    <td>
                        <%=data.price%>
                    </td>                    
                </tr>
                <% }) } %>
        </tbody>
    </table>

</body>
<style>
    table {
      border-collapse: collapse;
      width: 100%;
    }
    
    th, td {
      text-align: left;
      padding: 8px;
    }
    
    tr:nth-child(even){background-color: #f2f2f2}
    
    th {
      background-color: #04AA6D;
      color: white;
    }
    
              
              * { -webkit-box-sizing:border-box; -moz-box-sizing:border-box; -ms-box-sizing:border-box; -o-box-sizing:border-box; box-sizing:border-box; }
              
              html { width: 100%; height:100%; overflow:hidden; }
              
              body { 
                width: 100%;
                height:100%;
                font-family: 'Open Sans', sans-serif;
            
              }
              .form{
                  font-size: larger;
                  width: 250px;
                  height: 300px;
                  background: linear-gradient(to bottom, #33cccc 0%, #ff9933 100%);
                  border: 1px solid;
                padding: 10px;
                box-shadow: 5px 10px #363305;
              }
              div{
                  padding: 10px;
              }
              a:link, a:visited {
                background-color: #36f436;
                color: white;
                padding: 14px 25px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
              }
              
              a:hover, a:active {
                background-color: rgb(102, 228, 140);
              }
                 
    </style>
</html>